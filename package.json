{
  "name": "limeberry-ui",
  "version": "0.0.6-a",
  "description": "Limeberry UI",
  "type": "module",
  "main": "dist/limeberry.cjs",
  "module": "dist/limeberry.js",
  "exports": {
    ".": {
      "import": "./dist/limeberry.js",
      "require": "./dist/limeberry.cjs"
    },
    "./dist/styles.css": "./dist/styles.css"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
