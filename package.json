    "preview": "vite preview",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abergavenny/limeberry-ui.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abergavenny/limeberry-ui/issues"
  },
  "homepage": "https://github.com/abergavenny/limeberry-ui#readme",
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "3.1.0",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-terser": "7.0.2",
    "typescript": "4.6.4",
    "vite": "3.1.0",
    "vitepress": "1.0.0-alpha.15",
    "vue": "3.2.39",
    "vue-tsc": "0.40.4"
  },
  "files": [
    "dist",
    "types/*.d.ts"
